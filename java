    private void btnAdicionarActionPerformed(java.awt.event.ActionEvent evt) {                                             
int selectedIndex = Mochila.getSelectedIndex(); // Obtém o índice selecionado
    if (selectedIndex != -1) { // Verifica se um Pokémon foi selecionado
        String pokemon = Mochila.getModel().getElementAt(selectedIndex); // Pega o Pokémon selecionado
        ((DefaultListModel<String>) Mochila.getModel()).remove(selectedIndex); // Remove da mochila
        modeloLista.addElement(pokemon); // Adiciona ao campo de batalha (listaItens)
    }
    }                                            

    private void btnRemoverActionPerformed(java.awt.event.ActionEvent evt) {                                           
     int selectedIndex = listaItens.getSelectedIndex(); // Obtém o índice selecionado
    if (selectedIndex != -1) { // Verifica se um Pokémon foi selecionado
        String pokemon = modeloLista.getElementAt(selectedIndex); // Pega o Pokémon selecionado
        modeloLista.remove(selectedIndex); // Remove do campo de batalha
        ((DefaultListModel<String>) Mochila.getModel()).addElement(pokemon); // Adiciona de volta à mochila
    }
    }                                          

