    private final DefaultListModel<String> modeloLista;
    public Listas() {
        initComponents();
        modeloLista = new DefaultListModel<>();
listaItens.setModel(modeloLista);
// Crie o DefaultListModel para a Mochila
DefaultListModel<String> mochilaModel = new DefaultListModel<>();
Mochila.setModel(mochilaModel);

// Adicione os Pokémons à mochila
String[] pokemons = {
    "Pidgey – Normal/Voador", "Rattata – Normal", "Zubat – Venenoso/Voador",
    "Geodude – Pedra/Terra", "Caterpie – Inseto", "Weedle – Inseto/Venenoso",
    "Spearow – Normal/Voador", "Sentret – Normal", "Hoothoot – Normal/Voador",
    "Mareep – Elétrico", "Ekans – Venenoso", "Machop – Lutador",
    "Doduo – Normal/Voador", "Psyduck – Água", "Voltorb – Elétrico"
};
for (String pokemon : pokemons) {
    mochilaModel.addElement(pokemon);
}
    }

